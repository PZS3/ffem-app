<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="info"
            type="org.akvo.caddisfly.model.RecommendationInfo" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ddd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#fff">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".60"
                            android:padding="8dp"
                            android:text="State"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".40"
                            android:gravity="end"
                            android:padding="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="@{info.state}"
                            android:textSize="17sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F7F7F7"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:padding="8dp"
                            android:text="District"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:gravity="end"
                            android:padding="8dp"
                            android:text="@{info.district}"
                            android:textSize="17sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:padding="8dp"
                            android:text="Crop"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:gravity="end"
                            android:padding="8dp"
                            android:text="@{info.crop}"
                            android:textSize="17sp" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:paddingEnd="8dp"
                    android:gravity="end"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="(All values in kg/ha)"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textCombination1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingStart="8dp"
                    android:paddingTop="5dp"
                    android:text="Fertilizer Combination 1"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/tableDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#fff">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textComb1Fert1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".80"
                            android:padding="8dp"
                            android:text="@{info.values[0]}"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/textComb1Fert1Value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".20"
                            android:gravity="end"
                            android:padding="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="@{info.values[1]}"
                            android:textSize="17sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F7F7F7"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textComb1Fert2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:padding="8dp"
                            android:text="@{info.values[2]}"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/textComb1Fert2Value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:gravity="end"
                            android:padding="8dp"
                            android:text="@{info.values[3]}"
                            android:textSize="17sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textComb1Fert3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:padding="8dp"
                            android:text="@{info.values[4]}"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/textComb1Fert3Value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:gravity="end"
                            android:padding="8dp"
                            android:text="@{info.values[5]}"
                            android:textSize="17sp" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/textCombination2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingStart="8dp"
                    android:paddingTop="5dp"
                    android:text="Fertilizer Combination 2"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#fff">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textComb2Fert1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".80"
                            android:padding="8dp"
                            android:text="@{info.values[6]}"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/textComb2Fert1Value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".20"
                            android:gravity="end"
                            android:padding="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="@{info.values[7]}"
                            android:textSize="17sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F7F7F7"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textComb2Fert2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:padding="8dp"
                            android:text="@{info.values[8]}"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/textComb2Fert2Value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:gravity="end"
                            android:padding="8dp"
                            android:text="@{info.values[9]}"
                            android:textSize="17sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textComb2Fert3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:padding="8dp"
                            android:text="@{info.values[10]}"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/textComb2Fert3Value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:gravity="end"
                            android:padding="8dp"
                            android:text="@{info.values[11]}"
                            android:textSize="17sp" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/textResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingStart="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Test Results"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#fff">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70"
                            android:padding="8dp"
                            android:text="Nitrogen"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".30"
                            android:gravity="end"
                            android:padding="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="@{info.nitrogenResult}"
                            android:textSize="17sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F7F7F7"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:padding="8dp"
                            android:text="Phosphorus"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="end"
                            android:padding="8dp"
                            android:text="@{info.phosphorusResult}"
                            android:textSize="17sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:columnCount="2"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:padding="8dp"
                            android:text="Potassium"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="end"
                            android:padding="8dp"
                            android:text="@{info.potassiumResult}"
                            android:textSize="17sp" />
                    </TableRow>
                </TableLayout>


                <Button
                    android:id="@+id/button_prepare"
                    style="?primaryButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:enabled="true"
                    android:minWidth="230dp"
                    android:onClick="onSaveClick"
                    android:text="@string/save"
                    android:textColor="?primaryButtonColor" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>